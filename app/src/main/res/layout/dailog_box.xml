<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="30dp"
    app:cardElevation="50dp"
    app:cardCornerRadius="150dp"
    android:layout_height="350dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/high_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="59dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/label" />

        <androidx.cardview.widget.CardView
            android:layout_width="391dp"
            android:layout_height="59dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="29dp"
            app:cardBackgroundColor="#F4A300"
            app:cardCornerRadius="112dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/high_back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelCompleteID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="COMPLETE ROUND"
                    android:textAlignment="center"
                    android:textColor="#FFEB3B"
                    android:textSize="29dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="59dp"
            android:layout_height="65dp"
            android:layout_marginLeft="-70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_18" />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Nazmul Win"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="67dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_18" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="79dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_18" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="67dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_18" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="SCORE"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="198dp"
        android:layout_height="40dp"
        app:cardElevation="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="112dp"
        android:layout_marginLeft="180dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/complete"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="200"
        android:textColor="@color/black"
        android:id="@+id/scoreId"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="27dp"/>

</LinearLayout>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">
    <Button
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginLeft="152dp"
        android:text="exit"
        android:id="@+id/exitId"
        android:textColor="#FA990A"
        android:background="@drawable/high_back"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginLeft="86dp"
        android:text="Restart"
        android:id="@+id/restartId"
        android:textColor="#FA990A"
        android:background="@drawable/high_back"
        android:textSize="18dp"
        android:textStyle="bold" />
</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
